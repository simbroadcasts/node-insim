{
  "name": "node-insim",
  "version": "0.0.1",
  "description": "An InSim library for NodeJS",
  "main": "index.js",
  "repository": "git@github.com:simbroadcasts/node-insim.git",
  "author": "Peter Butcher <pete@pbutcher.uk> (https://pbutcher.uk)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "run-s build:*",
    "build:ts": "tsc",
    "build:copypackage": "cp -rf package.json dist",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn ./src/index.ts",
    "dev:example:insim": "cross-env NODE_ENV=development ts-node-dev --respawn examples/insim.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"./**/*.{js,ts,md,json,yml,yaml}\"",
    "lint": "eslint \"./{src,examples}/**/*\" --ext .js,.ts",
    "lint:fix": "eslint \"./{src,examples}/**/*\" --ext .js,.ts --fix",
    "dist": "cd dist && npm publish"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "parse-lfs-message": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "tiny-typed-emitter": "^2.1.0",
    "tslog": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.9",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/mitm": "^1.3.4",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "babel-jest": "^28.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.0.3",
    "mitm": "^1.7.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "files": [
    "**/*.js",
    "**/*.d.ts"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ]
  }
}
