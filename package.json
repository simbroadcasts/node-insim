{
  "name": "node-insim",
  "version": "0.0.1",
  "description": "An InSim library for NodeJS",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./packets": "./dist/packets/index.js",
    "./protocols": "./dist/protocols/index.js"
  },
  "repository": "git@github.com:simbroadcasts/node-insim.git",
  "author": "Peter Butcher <pete@pbutcher.uk> (https://pbutcher.uk)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.app.json",
    "dev": "cross-env DEBUG=* ts-node-dev --respawn ./src/index.ts",
    "dev:nodebug": "ts-node-dev --respawn ./src/index.ts",
    "test": "run-s test:compile \"test:run {@}\" --",
    "test:compile": "tsc -p tsconfig.test.json",
    "test:run": "jest",
    "test:watch": "run-s test:compile \"test:run --watch {@}\" --",
    "test:lfs": "run-s test:compile \"test:run -c jest.config.lfs.json --runInBand {@}\" --",
    "format": "prettier --write \"./**/*.{js,ts,md,json,yml,yaml}\"",
    "lint": "eslint \"./src/**/*\" --ext .js,.ts",
    "lint:fix": "eslint \"./src/**/*\" --ext .js,.ts --fix",
    "generate": "run-s \"generate:plop {@}\" lint:fix format --",
    "generate:plop": "plop",
    "dist": "cd dist && npm publish",
    "prepare": "run-s build"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "lodash": "^4.17.21",
    "parse-lfs-message": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "supports-color": "^9.2.3",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.9",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/mitm": "^1.3.4",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "babel-jest": "^28.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.0.3",
    "mitm": "^1.7.2",
    "npm-run-all": "^4.1.5",
    "plop": "^3.1.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "files": [
    "dist/"
  ]
}
