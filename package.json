{
  "name": "node-insim",
  "version": "0.0.1",
  "description": "An InSim library for NodeJS",
  "main": "index.js",
  "repository": "git@github.com:simbroadcasts/node-insim.git",
  "author": "Peter Butcher <pete@pbutcher.uk> (https://pbutcher.uk)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "dev:example:insim": "ts-node-dev --respawn src/examples/insim.ts",
    "start": "node ./build/index.js",
    "format": "prettier --write \"./**/*.{js,ts,md,json,yml,yaml}\"",
    "lint": "eslint ./src/**/* --ext .js,.ts",
    "lint:fix": "eslint ./src/**/* --ext .js,.ts --fix"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn"
    }
  }
}
