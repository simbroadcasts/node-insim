{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "noEmit": true,
    "allowJs": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "node-insim": ["./src/index"],
      "node-insim/packets": ["./src/packets/index"]
    }
  }
}
